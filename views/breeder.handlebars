<div class="uk-container">
    <h1>Find Popular Dog Breeds in Different Cities</h1>
    <button class="uk-button uk-button-primary" id="add-shelter">Add Shelter/Dog</button>
    <h5>Search by...</h5>
    <button class="uk-button uk-button-primary" id="byBreed">Breed</button>
    <button class="uk-button uk-button-primary" id="byCity">City</button>
</div>

{{!-- IF SORTED BY BREED --}}
<div id="breed">
    <div class="uk-container">
        <form>
            <div class="uk-margin">
                <label>Choose a Breed:</label>
                <select class="uk-select cap" id="pickBreed">
                    {{#each dog}}
                    <option class="cap">{{this.breed}}</option>
                    {{/each}}
                </select>
            </div>
            <button class="uk-button uk-button-primary" id="searchBreed">Search</button>
        </form>
    </div>

    <div id="breed-table">
        <div class="uk-container">
            <table class="uk-table uk-table-divider">
                <thead>
                    <tr>
                        <th>City</th>
                        <th>Count</th>
                    </tr>
                </thead>
                <tbody id="breedTable">
                </tbody>
            </table>
        </div>
    </div>
</div>


{{!-- IF SORTED BY CITY --}}
<div id="city">
    <div class="uk-container">
        <form>
            <div class="uk-margin">
                <label>Choose a City:</label>
                <select class="uk-select cap" id="pickCity">
                    {{#each location}}
                    <option class="cap">{{this.city}}</option>
                    {{/each}}
                </select>
            </div>
            <button class="uk-button uk-button-primary" id="searchCity">Search</button>
        </form>
    </div>

    <div id="city-table">
        <div class="uk-container">
            <table class="uk-table uk-table-divider">
                <thead>
                    <tr>
                        <th>Breed</th>
                        <th>Count</th>
                    </tr>
                </thead>
                <tbody id="cityTable">
                </tbody>
            </table>
        </div>
    </div>
</div>